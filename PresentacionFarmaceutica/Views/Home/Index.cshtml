@{
    ViewData["Title"] = "Inicio";
}

<div>
    <div class="text-center">
        <h1 class="display-4">SEPDI</h1>
    </div>

    <a class="btn btn-primary my-3" href="@Url.Action("", "",new{id = 0,origen="memoria"})" role="button">Agregar nuevo</a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Concentracion</th>
                <th scope="col">Forma farmaceutíca</th>
                <th scope="col">Precio</th>
                <th scope="col">Stock</th>
                <th scope="col">Presentación </th>
                <th scope="col">Habilitado</th>
                <th scope="col" >Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Nombre</td>
                    <td>@item.Concentracion</td>
                    <td>@item.FormaFamamaceutica</td>
                    <td>@item.Precio</td>
                    <td>@item.Stock</td>
                    <td>@item.Presentacion</td>
                    @if (@item.Habilitado == 1)
                    {                        
                        <td>Sí</td>
                    }else{
                        <td>No</td>
                    }
                    <td>
                        <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "Home",new{id = @item.Id})" role="button">Editar</a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Home",new{id = @item.Id})" role="button">Eliminar</a>
                    </td>
                </tr>
            }           
        </tbody>
    </table>
</div>






