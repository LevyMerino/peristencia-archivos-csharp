@{
    ViewData["Title"] = "Inicio";
}



<div>
    <div class="text-center">
        <h1 class="display-4">SEPDI</h1>
    </div>

    <form asp-controller="Home" asp-action="Index" method="get">
        <p>
            Title: <input type="text" name="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>

    <div class="row">
        <div class="col-8">
            <a class="btn btn-primary my-3" href="@Url.Action("CreateView", "Home")" role="button">Agregar nuevo</a>
        </div>
        <div class="col-4">
            <div class="input-group">
                <input type="search" class="form-control rounded" placeholder="Puedes filtrar por nombre, presentación, concentración" aria-label="Search" aria-describedby="search-addon" />
                <button type="button" onclick="submitSearch()" class="btn btn-outline-primary">Buscar</button>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Concentracion</th>
                <th scope="col">Forma farmaceutíca</th>
                <th scope="col">Precio</th>
                <th scope="col">Stock</th>
                <th scope="col">Presentación </th>
                <th scope="col">Habilitado</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Nombre</td>
                    <td>@item.Concentracion</td>
                    <td>@item.FormaFamamaceutica</td>
                    <td>@item.Precio</td>
                    <td>@item.Stock</td>
                    <td>@item.Presentacion</td>
                    @if (@item.Habilitado == 1)
                    {
                        <td>Sí</td>
                    }
                    else
                    {
                        <td>No</td>
                    }
                    <td>
                        <a class="btn btn-warning btn-sm" href="@Url.Action("EditView", "Home",new{id = @item.Id})" role="button">Editar</a>
                        @Html.ActionLink("Eliminar", "DeleteItem", new { id = item.Id }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('¿Estas seguro que deseas eliminar el elemento?');" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>






